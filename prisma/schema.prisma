// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(uuid())
  username           String
  createdAt          DateTime             @default(now())
  password           String
  phoneNumber        String
  email              String               @unique
  projects           Project[]
  ProjectMember      ProjectMember[]
  PlatformInvitation PlatformInvitation[]
}

model PlatformInvitation {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  senderId   String
  senderName String?
  user       User     @relation(fields: [senderId], references: [id])
  receiverId String
  receiverName String @default(value: "")
  receiverMobile String @default(value: "")
  receiverEmail String @default(value: "")
  status     String
}

model Project {
  id            String          @id @default(uuid())
  createdAt     DateTime        @default(now())
  name          String          @unique
  type          String
  location      String
  latitude      Float
  longitude     Float
  startDate     DateTime?
  endDate       DateTime?
  client        String?
  description   String?
  belongsToId   String
  belongsTo     User            @relation(fields: [belongsToId], references: [id])
  Update        Update[]
  ProjectMember ProjectMember[]
}

model ProjectMember {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  role      String
  projectId String
  belongsTo Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

enum UPDATE_STATUS {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

model Update {
  id        String        @id @default(uuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime
  status    UPDATE_STATUS @default(IN_PROGRESS)
  version   String?
  projectId String
  belongsTo Project       @relation(fields: [projectId], references: [id])
}
